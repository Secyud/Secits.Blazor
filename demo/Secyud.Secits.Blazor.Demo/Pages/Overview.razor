@attribute [Route(Menu.Overview)]

<SCard Theme="Theme" Size="Size">
    <Body>
    <SFormLayout>
        <FormLayoutItem Title="尺寸">
            <EnumSelector @bind-Value="Size"/>
        </FormLayoutItem>
        <FormLayoutItem Title="颜色主题">
            <EnumSelector @bind-Value="Theme"/>
        </FormLayoutItem>
    </SFormLayout>
    </Body>
</SCard>

<SCard Theme="Theme" Size="Size">
    <Header>
        按钮
    </Header>
    <Body>
    <Button Class="inline-block">
        Button
    </Button>
    <Button Class="inline-block outline">
        Button
    </Button>
    <Button Class="inline-block plain">
        Button
    </Button>
    <Button Class="inline-block shadow">
        Button
    </Button>
    </Body>
</SCard>

<SCard Theme="Theme" Size="Size">
    <Header>
        输入框
    </Header>
    <Body>
    <SFormLayout>
        <FormLayoutItem Title="default">
            <TextBox Value="@("default")" Class=""/>
        </FormLayoutItem>
        <FormLayoutItem Title="shadow">
            <TextBox Value="@("shadow")" Class="shadow"/>
        </FormLayoutItem>
        <FormLayoutItem Title="shadow">
            <InputNumber @bind-Value="IntValue" TValue="int"/>
        </FormLayoutItem>
        <FormLayoutItem Title="default">
            <CheckBox @bind-Checked="BoolValue"/>
        </FormLayoutItem>
        <FormLayoutItem Title="shadow" >
            <CheckBox @bind-Checked="BoolValue" Class="shadow"/>
        </FormLayoutItem>
    </SFormLayout>
    </Body>
</SCard>



@code
{
    private Theme Theme { get; set; }

    private Size Size { get; set; }

    private int IntValue { get; set; }

    private bool BoolValue { get; set; }
}
