@using Secyud.Secits.Blazor.Data

@attribute [Route(Menu.Table)]

<SCard>
    <Body>
    <SFormLayout>
        <FormLayoutItem Title="尺寸">
            <EnumSelector @bind-Value="Size"/>
        </FormLayoutItem>
        <FormLayoutItem Title="颜色主题">
            <EnumSelector @bind-Value="Theme"/>
        </FormLayoutItem>
    </SFormLayout>
    </Body>
</SCard>

<SCard Theme="Theme" Size="Size">
    <Body>
    <SGrid TValue="ListItem" Class="outline" FixFirstColumn FixLastColumn>
        <StaticDataSource Items="_list"/>
        <EnableIteratorVisualize/>
        <EnableColumnResize/>
        <GridColumn Caption="@nameof(ListItem.Name)" Width="200"
                    Field="@(item => item.Name)"/>
        <GridColumn Caption="@nameof(ListItem.PhoneNumber)" Width="200"
                    Field="@(item => item.PhoneNumber)"/>
        <GridColumn Caption="@nameof(ListItem.Age)" Width="50"
                    Field="@(item => item.Age)"/>
        <GridColumn Caption="@nameof(ListItem.BirthDate)" Width="512"
                    Field="@(item => item.BirthDate)"
                    Format="yyyy MM dd hh mm ss"/>
    </SGrid>
    </Body>
</SCard>

@code {
    readonly List<ListItem> _list = ListItem.Generate(200);

    private Theme Theme { get; set; }

    private Size Size { get; set; }
}