@using Secyud.Secits.Blazor.Data

@attribute [Route(Menu.Table)]

<SGrid TItem="ListItem" Height="@("500px")">
    <StaticDataSource Items="_list"/>
    <EnableIteratorVisualize/>
    <EnableColumnResize/>
    <GridColumn Caption="@nameof(ListItem.Name)"
                     ValueField="@(item => item.Name)"/>
    <GridColumn Caption="@nameof(ListItem.PhoneNumber)"
                     ValueField="@(item => item.PhoneNumber)"/>
    <GridColumn Caption="@nameof(ListItem.Age)"
                     ValueField="@(item => item.Age)"/>
    <GridColumn Caption="@nameof(ListItem.BirthDate)"
                     ValueField="@(item => item.BirthDate)"
                     Format="yyyy MM dd hh mm ss"/>
</SGrid>

@code {
    readonly List<ListItem> _list = ListItem.Generate(200);

}