<Project Sdk="Microsoft.NET.Sdk.Razor">
    <Import Project="../../common.props"/>

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="$(DotnetVersion)"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="**/*.razor.css" CssScope="s"/>
    </ItemGroup>


    <ItemGroup Condition="'$(EnableDefaultItems)' == 'true' And '$(EnableDefaultContentItems)' == 'true' ">
        <Content Include="..\..\..\web\css\**\*.min.css"
                 Link="wwwroot\css\%(RecursiveDir)%(Filename)%(Extension)"
                 ExcludeFromSingleFile="true"
                 CopyToPublishDirectory="PreserveNewest"
                 Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />
        <_ContentIncludedByDefault Include="@(Content)" />
    </ItemGroup>
    
</Project>
