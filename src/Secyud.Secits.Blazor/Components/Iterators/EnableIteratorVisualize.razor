@namespace Secyud.Secits.Blazor
@inherits SPluginBase<SIteratorBase<TValue>>
@typeparam TValue

@code
{
    public RenderFragment GenerateItems(RenderFragment<TValue> itemTemplate) =>
        __builder =>
        {
            <Virtualize @ref="_virtualize" 
                        ItemsProvider="RefreshRowsAsync" 
                        SpacerElement="spacer">
                @itemTemplate(context)
            </Virtualize>
        };
}
