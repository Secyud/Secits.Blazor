@using Secyud.Secits.Blazor.PageRouters
@namespace Secyud.Secits.Blazor

@if (Item is { } item)
{
    item.Body ??= CreateRouterTabsItemBody(item);
    @item.Body
}

@code {

    private static RenderFragment CreateRouterTabsItemBody(PageRouterItem item) =>
        @<DynamicComponent Type="item.PageType" Parameters="item.RouteValues"/>;

}