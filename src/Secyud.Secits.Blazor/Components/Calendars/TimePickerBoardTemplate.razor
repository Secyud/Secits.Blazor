@namespace Secyud.Secits.Blazor
@inherits TimePickerTemplateBase

@code
{
    public override RenderFragment RenderTemplate() =>
        @<div class="pkr-t board">
            <SliderBox Disabled="@Pression.Disable(DateTimePrecisionKind.Hour)"
                       @bind-Value="Hour" Cycle Format="00" Max="23" Style="@SliderStyle"/>
            <SliderBox Disabled="@Pression.Disable(DateTimePrecisionKind.Minute)"
                       @bind-Value="Minute" Cycle Format="00" Max="59" Style="@SliderStyle"/>
            <SliderBox Disabled="@Pression.Disable(DateTimePrecisionKind.Second)"
                       @bind-Value="Second" Cycle Format="00" Max="59" Style="@SliderStyle"/>
        </div>;

    private const string SliderStyle = "width: 3rem;padding: 0;";
}
