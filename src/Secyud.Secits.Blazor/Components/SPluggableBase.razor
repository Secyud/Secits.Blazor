@namespace Secyud.Secits.Blazor
@inherits SComponentBase
<div class="@GetClass()" style="@GetStyle()">
    @GenerateChildContent()
</div>

@code
{
    protected virtual RenderFragment? GenerateChildContent() => null;

    protected virtual RenderFragment? GenerateSetting() => ChildContent;

    protected virtual RenderFragment GenerateSettingContent() =>
        @<CascadingValue Value="PluggableContainer" IsFixed>
            @GenerateSetting()
        </CascadingValue>;
}
