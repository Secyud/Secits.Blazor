@namespace Secyud.Secits.Blazor
@inherits SLayoutSettingBase<SInput<TValue>>
@typeparam TValue

@code
{
    public override RenderFragment RenderTemplate() =>
        @<input value="@InputString" style="@GetStyle()"
                readonly="@(Master.Readonly ? "readonly" : null)"
                disabled="@(Master.Disabled ? "disabled" : null)"
                @oninput="OnInputAsync" @onchange="@OnChangeAsync"
                @attributes="Attributes"/>;
}
