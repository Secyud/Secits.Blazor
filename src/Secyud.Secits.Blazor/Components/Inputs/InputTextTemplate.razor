@namespace Secyud.Secits.Blazor
@inherits SLayoutPluginBase<SInput<TValue>>
@typeparam TValue

@code
{
    public override RenderFragment RenderTemplate() =>
        @<input value="@InputString" class="@GetClass()" style="@GetStyle()"
                readonly="@GetReadOnly()" disabled="@GetDisabled()"
                @oninput="OnInputAsync" @onchange="@OnChangeAsync"
                @attributes="Attributes"/>;
}
